# Kafka service
FROM confluentinc/cp-kafka:7.5.0

# Expose Kafka port
EXPOSE 9092

# Set environment variables
ENV KAFKA_BROKER_ID=1
ENV KAFKA_ZOOKEEPER_CONNECT=${ZOOKEEPER_URL:-zookeeper:2181}

# PLAINTEXT configuration (no auth)
ENV KAFKA_LISTENERS=PLAINTEXT://:9092
ENV KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://${KAFKA_URL:-kafka:9092}
ENV KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=PLAINTEXT:PLAINTEXT
ENV KAFKA_INTER_BROKER_LISTENER_NAME=PLAINTEXT

# Single-broker requirement
ENV KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
